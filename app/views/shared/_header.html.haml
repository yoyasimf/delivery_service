%header.navbar.navbar-top.navbar-inverse
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{type: "button", data: {toggle: "collapse", target: "#main-navbar-collapse"}, "aria-expanded" => false}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Delivery", root_url, class: "navbar-brand"
    .collapse.navbar-collapse{id: "main-navbar-collapse"}
      %ul.nav.navbar-nav
        %li= link_to 'Menu', '#'
        %li= link_to 'Contact', '#'
      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %li= link_to "Hi #{current_user.name}!", edit_user_registration_path
          %li= link_to 'Sign Out', destroy_user_session_path, method: :delete
        -else
          %li= link_to 'Sign In', new_user_session_path
          %li= link_to 'Sign Up', new_user_registration_path

